{% extends 'base.html.twig' %}

{% block title %}ResponseQuestion index{% endblock %}

{% block body %}
    <h1>ResponseQuestion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>Good_answer</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for response_question in response_questions %}
            <tr>
                <td>{{ response_question.id }}</td>
                <td>{{ response_question.content }}</td>
                <td>{{ response_question.goodAnswer ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('response_question_show', {'id': response_question.id}) }}">show</a>
                    <a href="{{ path('response_question_edit', {'id': response_question.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('response_question_new') }}">Create new</a>
{% endblock %}
