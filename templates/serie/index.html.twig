{% extends 'base.html.twig' %}

{% block title %}Serie index{% endblock %}

{% block body %}
    <h1>Serie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for serie in series %}
            <tr>
                <td>{{ serie.id }}</td>
                <td>{{ serie.libelle }}</td>
                <td>
                    <a class="btn btn-light" href="{{ path('serie_show', {'id': serie.id}) }}"><i class="fas fa-eye"></i></a>
                    <a class="btn btn-success" href="{{ path('serie_edit', {'id': serie.id}) }}"><i class="fas fa-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">Aucune série trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success"  href="{{ path('serie_new') }}"><i class="fas fa-plus p-r-5"></i>Ajouter une série</a>
{% endblock %}
